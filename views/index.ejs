<!doctype html>
<html lang="de">

<head>
    <title> Express-rss-reader </title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <h1 class="title">Express RSS Reader powered by node.js</h1>
    <div class="feed">
        <% feedItems.forEach(feedItem => { %>
            <div class="card article">
                <img src="<%= feedItem.enclosures[0].url %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%- feedItem.title %></h5>
                    <p class="card-text"><%- feedItem.description %></p>
                    <p class="card-text"><small class="text-muted"><%- moment(new Date(feedItem.created)).format('LLLL'); %></small></p>
                </div>
            </div>
        <% }); %>
    </div>
    <footer>
        <div id="app-footer">
            <a href="https://github.com/tobibechtold/express-rss-reader" target="_blank">
                <img src="/github.png" title="View this project on github.com" alt="View this project on github.com">
            </a>
        </div>
    </footer>
</body>


</html>